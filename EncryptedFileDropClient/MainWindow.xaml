<Window x:Class="EncryptedFileDropClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EncryptedFileDropClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name ="UsernameTextBox" HorizontalAlignment="Center" Margin="0,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="Username_Text_Changed"/>
        <PasswordBox x:Name ="PasswordTextBox" HorizontalAlignment="Center" Margin="0,199,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name ="AppTitleLabel" Content="Encrypted File Drop Application" HorizontalAlignment="Center" Margin="0,48,0,0" VerticalAlignment="Top" Width="318" HorizontalContentAlignment="Center"/>
        <Label x:Name="UsernameLabel" Content="Username" HorizontalAlignment="Left" Margin="212,151,0,0" VerticalAlignment="Top" RenderTransformOrigin="-8.608,-4.308" Height="27" Width="66" />
        <Button x:Name ="LoginButton" Content="Login" HorizontalAlignment="Center" Margin="0,241,0,0" VerticalAlignment="Top" Click="Button_Login_Click" Background="Green"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="212,195,0,0" VerticalAlignment="Top" Width="66"/>
        <Button Content="Register" HorizontalAlignment="Center" Margin="0,278,0,0" VerticalAlignment="Top" Height="21" Width="52" Click="Button_Register_Click"/>
        <Button Content="API Test" HorizontalAlignment="Center" Margin="0,321,0,0" VerticalAlignment="Top" Click="Button_ApiTest_Click"/>
        <TextBox x:Name ="ApiTestTextBox" HorizontalAlignment="Center" Margin="0,368,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Center" Margin="0,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="NameLabel" Content="Name" HorizontalAlignment="Left" Margin="212,113,0,0" VerticalAlignment="Top" Width="66"/>


    </Grid>

</Window>
